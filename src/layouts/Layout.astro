---
import ScrollIcon from '@/assets/scroll-icon.svg';

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Landing GTA VI - Whisperpiano</title>
	</head>
	<body>
		<slot />
		<ScrollIcon class="fixed bottom-6 right-0 left-0 m-auto text-pink-300 drop-shadow-2xl animate-bounce-pulse" />
	</body>
</html>

<style is:global>
	@import "tailwindcss";

	@theme {
		--font-sans: "GTA", system-ui, sans-serif;
		--font-narrow: "GTANarrow", system-ui, sans-serif;

		--animate-bounce-pulse: bounce-pulse 2s ease-in-out infinite;
	}

	html,
	body {
		background: #000;
		color: #fff;
		height: 300dvh;
		margin: 0;
		width: 100%;
		overflow-x: hidden;
		overscroll-behavior: none;
	}

	@font-face {
		font-family: "GTA";
		src: url("/fonts/gta-regular.woff");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "GTA";
		src: url("/fonts/gta-bold.woff");
		font-weight: bold;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "GTA";
		src: url("/fonts/gta-semibold.woff");
		font-weight: 600;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "GTANarrow";
		src: url("/fonts/gta-narrow.woff");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@keyframes bounce-pulse {
		0% {
			transform: translateY(0);
			scale: 0.95;
			opacity: 0.6;
		}
		50% {
			transform: translateY(-5x);
			scale: 1;
			opacity: 1;
		}
		100% {
			transform: translateY(0);
			scale: 0.95;
			opacity: 0.6;
		}
	}
</style>
